	"scripts": {
		"dev": "next dev --turbo",
		"build": "prisma generate --schema=../../packages/prisma/schema.prisma && next build --turbo",
		"start": "next start",
		"lint:check": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format:check": "biome format .",
		"format:fix": "biome format --write .",
		"spell:check": "cspell \"**/*\"",
		"knip:check": "knip",
		"type:check": "echo \"No type check (Next.js doesn't recommend tsc: https://github.com/vercel/next.js/issues/53732)\"",
		"validate:check": "pnpm format:check && pnpm lint:check && pnpm type:check && pnpm spell:check && pnpm knip:check",
		"validate:fix": "pnpm format:fix && pnpm lint:fix",
		"test:unit": "vitest",
		"test:e2e": "playwright test"
	},
	"dependencies": {
